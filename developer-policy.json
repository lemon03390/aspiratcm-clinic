{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2AndCloud9Permissions",
            "Effect": "Allow",
            "Action": [
                "ec2:*",
                "cloud9:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3Permissions",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListBucket",
                "s3:DeleteObject",
                "s3:GetBucketLocation",
                "s3:ListAllMyBuckets"
            ],
            "Resource": "*"
        },
        {
            "Sid": "CloudWatchAndLogsPermissions",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:*",
                "logs:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAMAndSSMPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:*",
                "ssm:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DynamoDBPermissions",
            "Effect": "Allow",
            "Action": [
                "dynamodb:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "LambdaPermissions",
            "Effect": "Allow",
            "Action": [
                "lambda:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SecretsManagerPermissions",
            "Effect": "Allow",
            "Action": [
                "secretsmanager:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "CloudFormationAndResourceGroupsPermissions",
            "Effect": "Allow",
            "Action": [
                "cloudformation:*",
                "resource-groups:*",
                "tag:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "StepFunctionsPermissions",
            "Effect": "Allow",
            "Action": [
                "states:*"
            ],
            "Resource": "*"
        }
    ]
} 